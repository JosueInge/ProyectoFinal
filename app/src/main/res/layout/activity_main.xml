<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologin"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/lblTituloMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="65dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="INICIO DE SESION"/>

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="169dp"
        android:layout_height="194dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/lblTituloMenu"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:srcCompat="@drawable/loginicon" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogin"
        android:hint="Usuario"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtContrase침a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsuario"
        android:layout_marginTop="16dp"
        android:hint="Contrase침a"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContrase침a"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:text="Iniciar sesi칩n" />

    <TextView
        android:id="@+id/lblMenu"
        android:layout_below="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:text="INGRESE LAS CREDENCIALES PARA INGRESAR"/>

</RelativeLayout>