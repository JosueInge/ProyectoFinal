<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinfo"
    tools:context=".FincaraudActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/VolverPuertaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/home"
        app:backgroundTint="#00BCD4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblTituloMirador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="PUERTA DEL DIABLO"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgMiradorC"
                android:layout_width="360dp"
                android:layout_height="203dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/lblTituloMirador"
                android:layout_marginTop="25dp"
                android:background="@drawable/puertadel" />

            <ImageView
                android:id="@+id/fondotext1"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_below="@+id/imgMiradorC"
                android:layout_marginLeft="01dp"
                android:layout_marginTop="20dp"
                android:background="#066E64" />

            <TextView
                android:id="@+id/lblinformacionMr"
                android:layout_width="401dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgMiradorC"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="La Puerta del Diablo es una formación rocosa y sitio turístico localizado en el distrito de Panchimalco, departamento de San Salvador, El Salvador. Su principal atractivo es la grieta formada por dos peñascos enclavados sobre el cerro El Chulo, en cuyas cimas puede observarse un amplio panorama del territorio circundante. Se encuentra situado a un kilómetro del parque Balboa."
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgMiradorMr2"
                android:layout_width="360dp"
                android:layout_height="203dp"
                android:layout_below="@+id/lblinformacionMr"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/puertadel2" />

            <ImageView
                android:id="@+id/fondotext2"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_below="@+id/imgMiradorMr2"
                android:layout_marginLeft="01dp"
                android:layout_marginTop="20dp"
                android:background="#066E64" />
            <TextView
                android:id="@+id/lblUbicacionMr"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgMiradorMr2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="21dp"
android:text="Aquí puedes hacer rapel, lanzado de tirolesa o canopy, montañismo, senderismo y bicicleta de montaña son algunas de las actividades preferidas por los visitantes."
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgMiradorMr3"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:layout_below="@+id/fondotext2"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:background="#066E64" />
            <TextView
                android:id="@+id/lblTarifa"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fondotext2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="TARIFAS:"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblTarif"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTarifa"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="$1.50 Nacionales"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblTarif2"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTarif"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:text="$3.00 Extranjeros"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblTarif3"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTarif2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:text="$1.00 Parqueo"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>