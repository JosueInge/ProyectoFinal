<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenu"
    tools:context=".RuinasActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/VolverRuinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_revert"
        app:backgroundTint="#00BCD4" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/lblRuinas"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:text="RUINAS"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/joya"
        android:layout_width="142dp"
        android:layout_height="136dp"
        android:layout_below="@id/lblRuinas"
        android:background="@drawable/joyaceren"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblRuinas"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="12dp"
        android:text="JOYA DE CEREN"
        android:textStyle="bold"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/descriptionjoya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblRuinas"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="37dp"
        android:text="El Parque Arqueológico Joya de Cerén es un ícono de la cultura prehispánica que te muestra cómo fue la vida cotidiana de los mayas. ."
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/sanandres"
        android:layout_width="142dp"
        android:layout_height="136dp"
        android:layout_below="@id/lblRuinas"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="181dp"
        android:background="@drawable/sanandres" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joya"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="23dp"
        android:text="SAN ANDRES"
        android:textStyle="bold"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/descriptionsanandres"
        android:layout_width="211dp"
        android:layout_height="121dp"
        android:layout_below="@id/descriptionjoya"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="93dp"
        android:text="San Andrés es uno de los centros prehispánicos más grandes de El Salvador. Habría constituido una capital regional entre los años 600 a 900 d.C. Esta antigua comunidad cubría un total de 200 hectáreas o más, y consistía en un centro monumental rodeado por una amplia zona residencial común."
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/museonacional"
        android:layout_width="140dp"
        android:layout_height="134dp"
        android:layout_below="@id/sanandres"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/museonacional"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sanandres"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="23dp"
        android:text="MUSEO NACIONAL DE ANTROPOLOGIA"
        android:textStyle="bold"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/descriptionmasferrer"
        android:layout_width="213dp"
        android:layout_height="165dp"
        android:layout_below="@id/descriptionsanandres"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="56dp"
        android:text="Este museo alberga una valiosa colección de objetos arqueológicos, etnográficos e históricos, que brindan una mirada al pasado desde los períodos prehispánicos hasta la actualidad, constituyendo una gama de elementos que muestran una larga ocupación humana del actual territorio salvadoreño."
        android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/VolverMiradores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_revert"
        app:backgroundTint="#00BCD4" />



</RelativeLayout>