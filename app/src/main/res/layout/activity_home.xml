<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenu"
    tools:ignore="ExtraText">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_lock_power_off"
        app:backgroundTint="#00BCD4" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/lblRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:text="SIVAR TOURS"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtRegistro"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lblRegist"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:text="Selecciona una atraccion"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMiradores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRegistro"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="MIRADORES"
        android:textColor="@color/white"
        android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnMiradores"
            android:layout_width="368dp"
            android:layout_height="210dp"
            android:layout_below="@+id/txtMiradores"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/miradores"
            android:text="Miradores"
            android:textAlignment="center"
            android:textSize="10dp" />

    <TextView
        android:id="@+id/txtBalnearios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMiradores"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"
        android:text="BALNEARIOS"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/btnBalnearios"
        android:layout_width="368dp"
        android:layout_height="210dp"
        android:layout_below="@+id/txtBalnearios"
        android:background="@drawable/balnearios"
        android:layout_marginTop="10dp"
        android:text="Miradores"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txtPlayas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBalnearios"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="50dp"
        android:text="PLAYAS"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/btnPlayas"
        android:layout_width="368dp"
        android:layout_height="210dp"
        android:layout_below="@+id/txtPlayas"
        android:background="@drawable/playas"
        android:layout_marginTop="10dp"
        android:text="Miradores"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txtSenderismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlayas"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"
        android:text="SENDERISMO"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/btnSenderismo"
        android:layout_width="368dp"
        android:layout_height="210dp"
        android:layout_below="@+id/txtSenderismo"
        android:background="@drawable/senderismo"
        android:layout_marginTop="10dp"
        android:text="Miradores"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txtTirolinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSenderismo"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"
        android:text="TIROLINAS"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/btnTirolinas"
        android:layout_width="368dp"
        android:layout_height="210dp"
        android:layout_below="@+id/txtTirolinas"
        android:background="@drawable/tirolinas"
        android:layout_marginTop="10dp"
        android:text="Miradores"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txtPlazas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTirolinas"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="50dp"
        android:text="PLAZAS"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/btnPlazas"
        android:layout_width="368dp"
        android:layout_height="210dp"
        android:layout_below="@+id/txtPlazas"
        android:background="@drawable/plazas"
        android:layout_marginTop="10dp"
        android:text="Miradores"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txtArqueologos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlazas"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:text="ARQUEOLOGOS"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/btnArqueologos"
        android:layout_width="368dp"
        android:layout_height="210dp"
        android:layout_below="@+id/txtArqueologos"
        android:background="@drawable/ruinas"
        android:layout_marginTop="10dp"
        android:text="Arqueologos"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="10dp" />

        <TextView
            android:id="@+id/txtParquess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnArqueologos"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="50dp"
            android:text="PARQUESS"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnParquess"
            android:layout_width="368dp"
            android:layout_height="210dp"
            android:layout_below="@+id/txtParquess"
            android:background="@drawable/parques"
            android:layout_marginTop="10dp"
            android:text="TRANSPORTE TURISTICO"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtHoteles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnParquess"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="50dp"
            android:text="HOTELES"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnHoteles"
            android:layout_width="368dp"
            android:layout_height="210dp"
            android:layout_below="@+id/txtHoteles"
            android:layout_marginTop="10dp"
            android:text="TRANSPORTE TURISTICO"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ho"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtTransporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnHoteles"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="50dp"
            android:text="TRANSORTE TURISTICO"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnTransporte"
            android:layout_width="368dp"
            android:layout_height="210dp"
            android:layout_below="@+id/txtTransporte"
            android:background="@drawable/transporte"
            android:layout_marginTop="10dp"
            android:text="TRANSPORTE TURISTICO"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textSize="10dp" />


</RelativeLayout>
</ScrollView>
</RelativeLayout>
